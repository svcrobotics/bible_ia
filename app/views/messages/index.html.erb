<div class="max-w-2xl mx-auto py-8 px-4">

  <!-- Titre principal -->
  <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
    Écrivez une prière ou une intention
  </h1>

  <% if flash[:notice] %>
    <div class="bg-yellow-100 text-yellow-800 font-medium px-4 py-2 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Formulaire -->
  <div class="bg-white shadow-md rounded-lg p-6 mb-8">
    <%= form_with model: @message, url: messages_path, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :contenu, "Votre message", class: "block text-gray-700 font-medium mb-2" %>
        <%= form.text_area :contenu, rows: 4, class: "w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-200" %>
      </div>
      <div class="text-right">
        <%= form.submit "Envoyer", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow" %>
      </div>
    <% end %>
  </div>

  <!-- Citation affichée -->
  <% if @citation %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-900 p-4 rounded-lg mb-6 shadow-sm">
      <p class="italic">💬 <%= @citation["texte"] %></p>
    </div>
  <% end %>

  <!-- Liste des messages précédents -->
  <h2 class="text-xl font-semibold text-gray-800 mb-4">📜 Intentions précédentes</h2>
  <div class="space-y-4">
    <% @messages.each do |message| %>
      <div class="bg-white shadow-md rounded-xl p-4 mb-4">
        <p class="text-gray-700 mb-2">
          <span class="font-semibold">🙏 Intention :</span>
          <%= message.contenu %>
        </p>

        <div class="border-l-4 border-blue-500 pl-4 mb-3">
          <% if message.reponse.present? && message.reponse.include?("💬") %>
            <% evangile, fox = message.reponse.split("💬", 2) %>

            <p class="text-blue-700 font-semibold mb-1">📖 Évangile de Matthieu</p>
            <p class="text-gray-800 mb-2"><%= simple_format(evangile.strip) %></p>

            <p class="text-green-700 font-semibold mb-1">💬 Emmet Fox</p>
            <p class="text-gray-800"><%= simple_format(fox.strip) %></p>
          <% else %>
            <p class="text-gray-800"><%= simple_format(message.reponse) %></p>
          <% end %>
        </div>

        <p class="text-sm text-gray-500 text-right">
          🕊️ Posté le <%= l(message.created_at, format: :long) %>
        </p>
      </div>
    <% end %>

  </div>

</div>
