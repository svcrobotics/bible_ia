<div class="max-w-xl mx-auto mt-10">
  <h1 class="text-2xl font-bold text-center mb-6 text-indigo-700">Écris ton message ou ta prière</h1>

  <%= form_with model: @message, local: true do |form| %>
    <div class="mb-4">
      <%= form.text_area :contenu, rows: 5, class: "w-full p-3 border border-gray-300 rounded shadow-sm", placeholder: "Ex : Seigneur, aide-moi à pardonner..." %>
    </div>
    <div class="text-center">
      <%= form.submit "Envoyer à l'IA", class: "bg-indigo-600 text-black px-4 py-2 rounded hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
